# WaveSwap Environment Configuration
# Copy this file to .env.local for local development

# Solana Configuration
SOLANA_RPC_ENDPOINT=https://api.devnet.solana.com
SOLANA_COMMITMENT=processed
SOLANA_NETWORK=devnet

# WaveSwap Program Configuration
WAVESWAP_PROGRAM_ID=11111111111111111111111111111111 # Replace with actual program ID
WAVESWAP_SWAP_REGISTRY_PROGRAM_ID=11111111111111111111111111111111 # Replace with actual program ID

# Arcium Configuration
ARCIUM_MXE_ENDPOINT=https://mxe-devnet.arcium.io
ARCIUM_PROGRAM_ID=11111111111111111111111111111111 # Replace with actual Arcium program ID
ARCIUM_TOKEN_WRAP_PROGRAM_ID=11111111111111111111111111111111 # Replace with actual program ID

# MagicBlock Configuration
MAGICBLOCK_EPHEMERAL_RPC=https://devnet-ephemeral.magicblock.io
MAGICBLOCK_PROGRAM_ID=11111111111111111111111111111111 # Replace with actual MagicBlock program ID
MAGICBLOCK_VALIDITY_DURATION_SECONDS=300

# Jupiter API Configuration
JUPITER_API_BASE_URL=https://quote-api.jup.ag/v6
JUPITER_API_KEY=your_jupiter_api_key_here

# Database Configuration
DATABASE_URL=postgresql://waveswap:password@localhost:5432/waveswap_dev
POSTGRES_USER=waveswap
POSTGRES_PASSWORD=password
POSTGRES_DB=waveswap_dev
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Redis Configuration (for caching and job queues)
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379

# API Server Configuration
API_PORT=3001
API_HOST=0.0.0.0
API_BASE_URL=http://localhost:3001
JWT_SECRET=your_jwt_secret_here_make_it_long_and_random
API_RATE_LIMIT_REQUESTS_PER_MINUTE=100

# Web Application Configuration
NEXT_PUBLIC_API_URL=http://localhost:3001
NEXT_PUBLIC_SOLANA_RPC_ENDPOINT=https://api.devnet.solana.com
NEXT_PUBLIC_SOLANA_NETWORK=devnet
NEXT_PUBLIC_WALLET_ADAPTER_NETWORK=devnet

# Feature Flags
ENABLE_PRIVACY_FEATURES=true
ENABLE_CROSS_CHAIN_BRIDGES=false
ENABLE_LIMIT_ORDERS=false
ENABLE_BULK_OPERATIONS=false

# Monitoring and Observability
DATADOG_API_KEY=your_datadog_api_key_here
SENTRY_DSN=your_sentry_dsn_here
LOG_LEVEL=info

# Security
CORS_ORIGIN=http://localhost:3000
MAX_SLIPPAGE_BPS=500 # 5%
MIN_SWAP_AMOUNT=1000 # Minimum amount in smallest token units
MAX_SWAP_AMOUNT=1000000000 # Maximum amount in smallest token units

# Development Only
ENABLE_MOCK_QUOTE_API=false
ENABLE_MOCK_SOLANA_CONNECTION=false
SKIP_SOLANA_VALIDATION=false